{
    "name": "zivvio/composer",
    "description": "The composer plugin for Yii extension installer",
    "keywords": ["yii2", "composer", "extension installer"],
    "type": "composer-plugin",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/zivvio/composer/issues",
        "source": "https://github.com/zivvio/composer"
    },
    "authors": [
        {
            "name": "Qiang Xue",
            "email": "qiang.xue@gmail.com"
        },
        {
            "name": "Carsten Brandt",
            "email": "mail@cebe.cc"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.0 | ^2.0"
    },
    "require-dev": {
        "composer/composer": "^1.0 | ^2.0@dev",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": { "yii\\composer\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "tests\\": "tests" }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "zivvio/composer": true
        }
    },
    "extra": {
        "class": "yii\\composer\\Plugin",
        "branch-alias": {
            "dev-main": "6.0.x-dev"
        }
    }
}
